% Draw clouds around things. Useful in mathematical proofs.
\newcommand{\cloud}[4][\dots]{
    \raisebox{-0.4\height}{
        \begin{tikzpicture}
            \node [cloud,
                draw,
                cloud puffs=#2,
                cloud ignores aspect,
                minimum height=#3,
                minimum width=#4] {#1};
        \end{tikzpicture}
    }
}

